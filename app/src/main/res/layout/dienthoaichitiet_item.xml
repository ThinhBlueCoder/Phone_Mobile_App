<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewdienthoaict"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tendtct"
            android:layout_width="297dp"
            android:layout_height="69dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="149dp"
            android:text="Tên đt"
            android:textColor="@color/register_bk_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/giadtct"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tendtct"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="-5dp"
            android:text="Gía dt"
            android:textColor="@color/register_bk_color"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/anhdtct"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="128dp"
            android:src="@drawable/lenovo" />

        <TextView
            android:id="@+id/chitiet"
            android:layout_width="376dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="235dp"
            android:text="Chi Tiết" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="400dp">

            <ImageView
                android:id="@+id/like"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/like"
                tools:ignore="SpeakableTextPresentCheck"></ImageView>

            <ImageView
                android:id="@+id/muahang"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/muahang"
                tools:ignore="SpeakableTextPresentCheck"></ImageView>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>